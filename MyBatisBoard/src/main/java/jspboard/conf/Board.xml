<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jspboard.model">
	
	<sql id="selBoard">
		select 
			bid, bname, bregdate, bdelyn
		from board
	</sql>
	
	<sql id="updBoard">
		update board set
	</sql>
	
	<select id="selectListBoard" resultType="Board">
		<include refid="selBoard" /> order by bid desc
	</select>
	
	<select id="selectOneBoard" parameterType="int" resultType="Board">
		<include refid="selBoard" /> where bid=#{bid}
	</select>
	
	<insert id="insertBoard" parameterType="Board" >
		insert into board
		values(seq_board.nextval, #{bname}, systimestamp, 'N')
	</insert>
	
	<update id="updateBoard" parameterType="Board">
		<include refid="updBoard" /> bname=#{bname} where bid=#{bid}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		<include refid="updBoard" /> 
		bdelyn = decode(bdelyn, 'Y', 'N', 'N', 'Y', bdelyn)
		where bid=#{bid}
	</delete>

</mapper>
