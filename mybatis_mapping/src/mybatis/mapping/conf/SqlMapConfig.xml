<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="mybatis/mapping/conf/db.properties" />

	<typeAliases>
		<typeAlias alias="Blog" type="mybatis.mapping.model.Blog" />
		<typeAlias alias="Author" type="mybatis.mapping.model.Author" />
		<typeAlias alias="Comment" type="mybatis.mapping.model.Comment" />
		<typeAlias alias="Post" type="mybatis.mapping.model.Post" />
		<typeAlias alias="Tag" type="mybatis.mapping.model.Tag" />
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="mybatis/mapping/conf/Blog.xml" />
	</mappers>
	
</configuration>